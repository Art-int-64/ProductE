<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp4.EmailPage"
             Title="EmailPage" NavigationPage.HasNavigationBar="False">
    <VerticalStackLayout Margin="5" >
        <Label Text="Подтверждение почты" HorizontalOptions="Center" FontAttributes="Bold" FontSize="25" Margin="20" />
        <Label x:Name="Lebel_Email" FontSize="16" />
        <Entry x:Name="Entry_Kod_Email" Placeholder="Введите код потверждение" FontSize="20"/>
        <Button Text="Подтвердить" Clicked="Button_Clicked" Margin="30,30,30,0"/>
    </VerticalStackLayout>
</ContentPage>